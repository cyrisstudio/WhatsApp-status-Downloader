<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyris.StatusDownloader">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_what"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_what_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value=""/>
        <activity android:name="com.cyris.StatusDownloader.SplashScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cyris.StatusDownloader.LoadVideo" />
        <activity android:name="com.cyris.StatusDownloader.ui.setting.SettingActivity" />
        <activity android:name="com.cyris.StatusDownloader.LoadImage" />
        <activity
            android:name="com.cyris.StatusDownloader.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>
